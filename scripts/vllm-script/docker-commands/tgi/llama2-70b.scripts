#!/bin/bash
### Llama-2-70b

############################## GPU 0 ##############################
# TGI
docker run --gpus device=0 --shm-size 1g -p 8000:80 \
        --network benchmark-net \
        -e HUGGING_FACE_HUB_TOKEN=$token \
        -v $PWD/Llama-2-tokenizer_config.json:/app/tokenizer_config.json \
        --name tgi0_llama70 \
        -d tgi \
        --tokenizer-config-path /app/tokenizer_config.json \
        --num-shard 4 \
        --model-id meta-llama/Llama-2-70b-chat-hf

# Benchmark
