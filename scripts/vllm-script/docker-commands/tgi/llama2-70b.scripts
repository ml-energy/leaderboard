        -d benchmark:latest \
        --backend tgi \
        --dataset /data/ShareGPT_V3_filtered_1000.json \
        --host tgi0_llama70 \
        --port 80 \
        --model meta-llama/Llama-2-70b-chat-hf \
        --out-filename /results/tgi-llama2-70b-rr025 \
        --request-rate 0.25 \
        --num-runs 1

